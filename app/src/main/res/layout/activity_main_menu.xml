<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/backmenu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/backgroundmenu"

        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="280dp"
        android:layout_height="384dp"

        android:orientation="vertical"
        app:circularflow_defaultRadius="11dp"
        app:circularflow_radiusInDP="11dp"
        app:flow_firstHorizontalBias="0.498"
        app:flow_firstVerticalBias="0.498"
        app:flow_horizontalBias="0.498"
        app:flow_lastHorizontalBias="0.498"
        app:flow_lastVerticalBias="0.498"
        app:flow_verticalBias="0.498"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="@android:dimen/notification_large_icon_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/backmenu"
        app:layout_constraintTop_toTopOf="@+id/backmenu">>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:padding="20dp"
            android:text="eat homemade anywhere"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="34sp" />

        <Button
            android:id="@+id/SignwithEmail"
            android:layout_width="220dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:background="@drawable/btnred"

            android:paddingLeft="10dp"
            android:text="SigIn "
            android:textColor="#FFFFFF" />


        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="45dp"
            android:layout_gravity="clip_horizontal|center"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#474646">

            </TableRow>

            <TextView
                android:id="@+id/OR"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:text="OR"
                android:textAlignment="center"
                android:textColor="#090909"
                android:textSize="17sp" />

            <TableRow
                android:id="@+id/dr"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#474646" />
        </LinearLayout>

        <Button
            android:id="@+id/Signup"
            android:layout_width="214dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"

            android:text="Signup"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>